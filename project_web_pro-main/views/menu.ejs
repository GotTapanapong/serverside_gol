<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>เมนู</title>
    <link rel="stylesheet" href="/css/menu.css">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap" rel="stylesheet">
</head>

<body>
    <nav class="bg-brown">
        <div class="container">
            <div class="logo"><a href="/menu"><img class="logo-img" src="/images/logo.png" alt="Logo"></a></div>
            <ul id="nav-menu" class="nav-menu">
                <li><a href="/menu">เมนู</a></li>
                <li><a href="/cart">ตะกร้า</a></li>
                <li><a href="/orders">คำสั่งซื้อ</a></li>
            </ul>
            <ul id="auth-menu" class="nav-menu"><li><a href="/logout" id="btn-logout">ลงชื่อออก</a></li></ul>
            <button id="toggle-btn" class="hamburger">☰</button>
        </div>
    </nav>

    <div class="content-wrapper" id="box"></div>

    <div id="productModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <img id="modalImage" class="product-image" src="" alt="product image" />
            <h2 id="modalName"></h2>
            <p id="modalPrice"></p>
            <h3>ความหวาน</h3>
            <div class="sweetness-options">
                <button class="sweetness-btn" data-value="ไม่หวาน">ไม่หวาน</button>
                <button class="sweetness-btn" data-value="หวานน้อย">หวานน้อย</button>
                <button class="sweetness-btn" data-value="หวานปกติ">หวานปกติ</button>
                <button class="sweetness-btn" data-value="หวานมาก">หวานมาก</button>
            </div>
            <h3>จำนวน</h3>
            <div class="quantity-container">
                <button id="decreaseQuantity">-</button>
                <span id="quantity">1</span>
                <button id="increaseQuantity">+</button>
            </div>
            <button id="addToCartBtn">เพิ่มลงตะกร้า</button>
        </div>
    </div>

    <script>
        // --- ส่วนจัดการ Navbar ---
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById("toggle-btn");
            const navMenu = document.getElementById("nav-menu");
            const authMenu = document.getElementById("auth-menu");
            toggleBtn.addEventListener("click", function () {
                navMenu.classList.toggle("active");
                authMenu.classList.toggle("active");
            });
        });

        document.addEventListener("DOMContentLoaded", () => {
            // --- เพิ่มบรรทัดนี้เข้ามาเป็นบรรทัดแรกสุด ---
            document.getElementById("productModal").style.display = "none";

            // --- ส่วนแสดงผลสินค้า ---
            fetch("/get-products")
                .then(response => response.json())
                .then(data => {
                    if (!data.success) {
                        console.error("Error from server:", data.message);
                        alert("เกิดข้อผิดพลาด: " + data.message);
                        return;
                    }
                    const products = data.products;
                    const box = document.getElementById("box");
                    if (!products || products.length === 0) {
                        box.innerHTML = '<p style="text-align: center; color: white;">ไม่พบสินค้าในขณะนี้</p>';
                        return;
                    }
                    for (const product of products) {
                        const imgURL = `data:image/png;base64,${product.image_product}`;
                        const card = document.createElement("div");
                        card.classList.add("card");
                        card.innerHTML = `
                            <a href="#"><img class="product-image" src="${imgURL}" alt="${product.product_name}" /></a>
                            <div class="card-content">
                                <a href="#"><B class="product-name">${product.product_name}</B></a>
                                <div class="price-container"><span class="product-price">฿${product.price}</span></div>
                            </div>`;
                        card.addEventListener("click", (e) => {
                            e.preventDefault();
                            openModal(product, imgURL);
                        });
                        box.appendChild(card);
                    }
                })
                .catch(error => {
                    console.error("Fetch Error:", error);
                    alert("ไม่สามารถโหลดข้อมูลสินค้าได้ โปรดตรวจสอบ Console");
                });
        });

        // --- ส่วนจัดการ Modal ---
        const modal = document.getElementById("productModal");
        let productPrice = 0;
        let selectedSweetness = "";

        function openModal(product, imgURL) {
            document.getElementById("modalImage").src = imgURL;
            document.getElementById("modalName").textContent = product.product_name;
            productPrice = product.price;
            updatePrice();
            modal.style.display = "flex";
        }
        function updatePrice() {
            const quantity = parseInt(document.getElementById("quantity").textContent);
            document.getElementById("modalPrice").textContent = `฿${(productPrice * quantity).toFixed(2)}`;
        }
        document.querySelector(".close").addEventListener("click", () => {
            resetModal();
            modal.style.display = "none";
        });
        document.getElementById("increaseQuantity").addEventListener("click", () => { document.getElementById("quantity").textContent++; updatePrice(); });
        document.getElementById("decreaseQuantity").addEventListener("click", () => { let q = parseInt(document.getElementById("quantity").textContent); if (q > 1) { document.getElementById("quantity").textContent = q - 1; updatePrice(); }});
        document.querySelectorAll(".sweetness-btn").forEach(button => {
            button.addEventListener("click", () => {
                document.querySelectorAll(".sweetness-btn").forEach(btn => btn.classList.remove("active"));
                button.classList.add("active");
                selectedSweetness = button.dataset.value;
            });
        });
        function resetModal() {
            document.getElementById("quantity").textContent = "1";
            document.querySelectorAll(".sweetness-btn").forEach(button => button.classList.remove("active"));
            selectedSweetness = "";
            productPrice = 0;
        }

        // --- ส่วนเพิ่มลงตะกร้า ---
        document.getElementById("addToCartBtn").addEventListener("click", () => {
            if (selectedSweetness === "") { return alert("กรุณาเลือกระดับความหวาน"); }
            const cartItem = {
                productName: document.getElementById("modalName").textContent,
                price: productPrice,
                quantity: parseInt(document.getElementById("quantity").textContent),
                sweetness: selectedSweetness,
                image_product: document.getElementById("modalImage").src.split(',')[1]
            };
            fetch("/addToCart", { method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(cartItem) })
            .then(res => res.json()).then(data => {
                if (data.success) {
                    alert("เพิ่มลงตะกร้าสำเร็จ!");
                    resetModal();
                    modal.style.display = "none";
                } else { alert("เกิดข้อผิดพลาด!"); }
            }).catch(error => console.error("Error:", error));
        });
    </script>
</body>
</html>